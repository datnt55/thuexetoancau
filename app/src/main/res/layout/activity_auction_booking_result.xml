<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/common_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Cám ơn quý khách đặt xe, thông tin đặt xe sẽ được lái xe đấu giá và liên hệ sớm nhất để quý khách có chuyến đi rẻ nhất và an toàn nhất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/textView8"
                android:layout_margin="20dp" />

            <TextView
                android:text="Thông tin hành khách"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/color_text"
                android:textStyle="bold"
                android:id="@+id/textView3" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/image_vew_border"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Họ và tên"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textColor="@color/color_text"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_name"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Số điện thoại"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_phone"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Điểm đi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_from"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Điểm đến"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_to"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Loại xe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_size"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Hình thức thuê"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_hire_type"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Đối tượng thuê"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_target_hire"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Ngày giờ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_date_time"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Số km ước tính"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_km_estimate"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="Giá ước tính"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_price_estimate"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:text="GHI CHÚ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_dark"
                        android:textStyle="bold"
                        android:layout_weight="0.4" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_note"
                        android:textColor="@color/black"
                        android:layout_weight="0.6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
