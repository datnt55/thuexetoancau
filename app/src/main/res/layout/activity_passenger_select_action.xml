<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="@drawable/bg_passenger_infor"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_shape"
        android:elevation="@dimen/spacing_5"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_menu"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="@dimen/spacing_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/ic_menu_black_24dp" />
        </FrameLayout>



        <EditText
            android:id="@+id/edt_search"
            android:layout_width="@dimen/spacing_0"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:ems="10"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Bạn muốn đi đâu"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/select_action_layout_padding">

        <Button
            android:id="@+id/btn_booking"
            style="@style/button_white_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_action_margin"
            android:text="Đặt xe trực tuyến" />

        <Button
            android:id="@+id/btn_infor"
            style="@style/button_white_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm xe chiều về/Đi chung" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_last_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
    </FrameLayout>
</RelativeLayout>