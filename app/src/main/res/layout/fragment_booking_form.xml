<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_content"

                android:padding="15dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_hire_type"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Hình thức thuê"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_light"
                        android:id="@+id/textView5" />

                    <TextView
                        android:id="@+id/edt_hire_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:background="@drawable/btn_role"
                        android:lines="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_place_from"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểm đi"
                        android:textColor="@color/blue_light" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/btn_role"
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_height="45dp">
                        <AutoCompleteTextView
                            android:id="@+id/auto_place_from"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:background="@android:color/transparent"
                            android:paddingLeft="10dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:hint="Quận huyện, đường phố, thị trấn..."
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cancel"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:id="@+id/img_from" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_place_to"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Điểm đến"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_light"
                        android:id="@+id/textView" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:background="@drawable/btn_role">

                        <AutoCompleteTextView
                            android:id="@+id/auto_place_to"
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:inputType="text"
                            android:hint="Quận huyện, đường phố, thị trấn..." />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cancel"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:id="@+id/img_to" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_car_type"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Loại xe"
                        android:textColor="@color/blue_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/edt_car_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/btn_role"
                        android:lines="1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_target_type"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Đối tượng thuê"
                        android:textColor="@color/blue_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/edt_target_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_role"
                        android:lines="1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_date_from"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ngày giờ đi"
                        android:textColor="@color/blue_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/edt_date_from"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_role"
                        android:lines="1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:id="@+id/layout_date_to"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ngày giờ về"
                        android:textColor="@color/blue_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/edt_date_to"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_role"
                        android:lines="1" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/red"
                    android:id="@+id/txt_warn"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:gravity="right"
                    android:id="@+id/layout_tax">

                    <Button
                        android:text="Xác nhận"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_confirm"
                        style="@style/button_white_title"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
